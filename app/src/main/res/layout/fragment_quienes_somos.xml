<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    tools:context=".QuienesSomosFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="0dp"
        android:minHeight="?attr/actionBarSize"
        android:background="#3A32739c"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVerCamaras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/acme"
            android:text="Security House"
            android:textColor="#f5f5f5"
            android:textSize="33sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_circle">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/logo1" />

        </LinearLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/audiowide"
            android:padding="0dp"
            android:text="Version 1.0\n Para dispositivos Android v.6+"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="#f5f5f5" />

        <GridLayout
            android:layout_width="304dp"
            android:layout_height="145dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:background="@drawable/shape_border"
            android:columnCount="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/maury2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Mauricio \nNuÃ±ez"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/pelado3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Damian \n Villarreal"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/mati2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Matias\nRivas"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        android:padding="0dp"
        android:src="@drawable/logo_ulp" />


</RelativeLayout>