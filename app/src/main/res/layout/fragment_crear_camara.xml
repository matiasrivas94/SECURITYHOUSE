<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCamaraFragment"
    android:background="@drawable/azul1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:minHeight="?attr/actionBarSize"
        android:background="#3a254169"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCrearCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CÃ¡mara IP"
            android:fontFamily="@font/acme"
            android:textColor="#f5f5f5"
            android:textSize="28sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="4"
                android:padding="10dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:rowCount="9">

                <TextView
                    android:id="@+id/tvNombreCam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:paddingTop="20dp"
                    android:text="Nombre:"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNombreCam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:ems="10"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="#f5f5f5" />

                <TextView
                    android:id="@+id/textViewTituloCamaraIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:paddingTop="20dp"
                    android:text="Direccion IP:"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:ems="10"
                    android:textColor="#f5f5f5" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:paddingTop="20dp"
                    android:text="User:"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/etUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:ems="10"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="#f5f5f5" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="3"
                    android:paddingTop="20dp"
                    android:text="Password:"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />


                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:layout_row="3"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="#f5f5f5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="4"
                    android:paddingTop="20dp"
                    android:text="Puerto:"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <!--<EditText
                    android:id="@+id/etPuerto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:layout_row="4"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#f5f5f5" />-->
                <Spinner
                    android:id="@+id/SPPuerto"
                    android:layout_width="356dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/tvTitulo"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_row="4"
                    android:background="#949494"
                    android:ems="10"
                    android:spinnerMode="dialog"
                    android:textColor="@android:color/black"></Spinner>

                <Button
                    android:id="@+id/btnAceptarCam"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginTop="50dp"
                    android:layout_row="5"
                    android:background="@drawable/shape"
                    android:text="Crear"
                    android:textColor="#f5f5f5" />
            </GridLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>