<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#f33b3b3b">

    <GridLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:rowCount="5">

        <TextView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:ems="20"
            android:inputType="text"
            android:text="Ingrese la clave de la alarma: "
            android:textStyle="bold"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/etClaveVieja"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="20"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="18dp" />
        <TextView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:ems="20"
            android:inputType="text"
            android:text="Ingrese su nueva clave: "
            android:textStyle="bold"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/etClaveNueva"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="20"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="18dp" />
        <Button
            android:id="@+id/btnCancelarSMS"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Cancelar"
            android:textColor="#f0f0f0"
            android:background="@drawable/shape"/>
        <Button
            android:id="@+id/btnEnviarSMS"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="4"
            android:text="Cambiar clave"
            android:textColor="#f0f0f0"
            android:background="@drawable/shape"/>
    </GridLayout>
</LinearLayout>