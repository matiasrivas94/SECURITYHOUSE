<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/fondo1"
    tools:context=".ConfigFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:minHeight="?attr/actionBarSize"
        android:background="#3A32739c"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Configuracion"
            android:fontFamily="@font/acme"
            android:textColor="#f5f5f5"
            android:textSize="33sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentTop="true"
            android:layout_margin="25dp"
            app:cardCornerRadius="60dp">-->

        <GridLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:rowCount="3">

            <!-- FILA 0 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnActivar"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/verde2"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Activar Panel"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="30dp"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnDesactivar"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rojo1"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Desactivar Panel"
                    android:textSize="20dp" />
            </LinearLayout>
            <!-- FIN DE FILA -->
            <!--  FILA 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnCambiarClave"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/llave1"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/acme"
                    android:text="Cambiar Clave"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="30dp"
                android:layout_row="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnEstado"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/status"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/acme"
                    android:text="Verificar estado"
                    android:textSize="20dp" />
            </LinearLayout>
            <!-- FIN DE FILA 1-->

            <!-- FILA 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_row="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnAtras"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/atras1"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/acme"
                    android:text="Volver atras"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="30dp"
                android:layout_row="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnSalir"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/salir"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/acme"
                    android:text="Salir"
                    android:textSize="20dp" />
            </LinearLayout>
            <!-- FIN DE FILA -->


        </GridLayout>

        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>

</FrameLayout>