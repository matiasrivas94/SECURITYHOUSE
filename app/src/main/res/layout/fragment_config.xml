<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    tools:context=".ConfigFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Configuracion"
            android:textColor="#f5f5f5"
            android:textSize="33sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:columnCount="4"
        android:paddingTop="20dp"
        android:rowCount="9">


        <Spinner
            android:id="@+id/spPrueba"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_row="0"
            android:animateLayoutChanges="true"
            android:background="@color/colorPrimaryDark">

        </Spinner>

        <!--<TextView
            android:id="@+id/txtNoHay"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:gravity="center"
            android:text="No hay alarmas creadas"
            android:textSize="20sp" />-->

        <TextView
            android:id="@+id/txtActivar"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:text="Activar Panel"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnActivar"
            android:layout_width="108dp"
            android:layout_height="67dp"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:text="Activar"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtDesactivar"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="5"
            android:text="Desactivar Panel"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDesactivar"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_row="5"
            android:text="Desactivar"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtCambiarClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="6"
            android:text="Cambiar Clave Primaria"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCambiarClave"
            android:layout_width="108dp"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_row="6"
            android:text="Cambiar"
            android:textColor="#000000" />
    </GridLayout>

</FrameLayout>