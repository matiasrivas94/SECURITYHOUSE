<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    tools:context=".TabZonasFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 1"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 2"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 3"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 4"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 5"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edName6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Zona 6"
            android:padding="20dp"
            android:textColor="#f5f5f5"
            android:textColorHint="#939393"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvName6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="TextView"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnGuardarZonas"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape"
            android:text="Guardar" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>