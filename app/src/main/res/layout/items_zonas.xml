<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:columnCount="4"
            android:padding="10dp"
            android:paddingBottom="0dp"
            android:paddingTop="50dp"
            android:rowCount="9">
			
			<ImageView
                android:id="@+id/ivIconoZona"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="0"
				android:layout_row="0"
                android:background="@drawable/iconozona"
                android:layout_marginTop="5dp"/>
			<Button
                android:id="@+id/btNombreZona"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:background="#01f5f5f5"
                android:text="nombrezona"
                android:textAlignment="viewStart" />
				
			<ImageView
                android:id="@+id/ivNotificacionZona"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_row="0"
                android:background="@drawable/snooze1"
                android:textSize="10dp"
				android:layout_marginTop="13dp"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>