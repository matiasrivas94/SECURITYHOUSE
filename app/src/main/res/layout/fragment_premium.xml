<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    tools:context=".PremiumFragment">

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="379dp"
        android:layout_gravity="center"
        android:background="@drawable/gris1"
        android:orientation="vertical"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="324dp"
            android:layout_height="65sp"
            android:background="#3a010203"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/textPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/acme"
                android:text="Premium"
                android:textColor="#f5f5f5"
                android:textSize="33sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo1" />

        <Button
            android:id="@+id/btnPremium3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape"
            android:text="3 MESES" />

        <Button
            android:id="@+id/btnPremium1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="1 AÃ‘O" />


    </LinearLayout>

</FrameLayout>