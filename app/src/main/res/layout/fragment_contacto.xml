<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo1"
    tools:context=".ContactoFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#8e8e8e"
            android:text="Contacto"
            android:textSize="33sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:padding="10dp"
        android:rowCount="15">

        <TextView
            android:id="@+id/textNombreContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Nombre"
            android:textColor="#f5f5f5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombreContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:text="Email"
            android:textColor="#f5f5f5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/textAsunto"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="4"
            android:text="Asunto"
            android:textColor="#f5f5f5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAsunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/txtMje"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:text="Mensaje"
            android:textColor="#f5f5f5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMensajeContacto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="left"
            android:gravity="top|left"
            android:layout_marginTop="10dp"
            android:layout_row="7"
            android:height="150dp"
            android:background="#f5f5f5"
            android:padding="0dp"
            android:scrollbars="vertical"
            android:lines="6"/>

        <Button
            android:id="@+id/btnEnviarMensaje"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="14dp"
            android:layout_row="8"
            android:height="25dp"
            android:background="@drawable/shape"
            android:text="Enviar"
            android:textColor="#f5f5f5" />
    </GridLayout>
</FrameLayout>